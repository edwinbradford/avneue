<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>VideoJS Neue MPEG-DASH Example</title>

    <style>
      html {
        width: 100%;
        height: 100%;
        font-family: consolas;
        font-size: 10px;
        background-color:#e5e5e5;
      }
      body {
        margin: 0;
      }
      video {
        margin: 0;
      }
    </style>

    <!-- Load the css styles -->
    <link href="../build/temp/video-js.css" rel="stylesheet" type="text/css">

    <!-- Add ES5 shim and sham for IE8 -->
    <script src="../dist/ie8/videojs-ie8.js"></script>

    <!-- Load Javascript files -->
    <script src="../dist/video.js"></script>

    <!-- MPEG DASH support -->
    <script src="../../dash.js/dist/dash.all.min.js"></script>
    <script src="../../videojs-contrib-dash/dist/videojs-dash.min.js"></script>

    <script>videojs.options.flash.swf = '../node_modules/videojs-flash/node_modules/videojs-swf/dist/video-js.swf';</script>

  </head>
  <body>

    <video id="videoJSElement" class="video-js vjs-16-9 vjs-big-play-centered" poster="poster.jpg">
      <source src="https://archive.org/download/ElephantsDream/ed_hd.mp4" type="video/mp4">
      <source src="http://dash.edgesuite.net/akamai/test/caption_test/ElephantsDream/elephants_dream_480p_heaac5_1.mpd" type="application/dash+xml">

      <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
    </video>

    <script>
      videojs(document.getElementById('videoJSElement'), {
        "html5": {
          nativeTextTracks: true // Set false to test descriptions
        },
        // Fluid has a black border with mpeg-dash, use vjs-16-9 style instead
        // "fluid": true,
        "controls": true,
        "preload": "auto",
        "autoplay": false,
        "controlBar": {
            // "muteToggle": false
        },
        "playbackRates": [0.5, 1, 1.5, 2]
      },
      function() {
        // this.createModal('foo');
        // Callback.
      });
    </script>

    <!--<script>player.createModal('foo');</script>-->

  </body>
</html>
